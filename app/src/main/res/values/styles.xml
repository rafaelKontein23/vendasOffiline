<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="textbold">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#21262F</item>
    </style>

    <style name="text_sub_titulo">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#9FA3A8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:letterSpacing">.02</item>
    </style>

    <style name="Edit_text_Padrap">

        <item name="android:background">@drawable/edit_text_padrao</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#8AAAC6</item>

    </style>

    <style name="Button">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="backgroundTint">@color/Azul_inicial</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="DialoAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_pra_cima</item>
        <item name="android:windowExitAnimation">@anim/slide_pra_baixo</item>

    </style>

    <style name="text_comum">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#717377</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>