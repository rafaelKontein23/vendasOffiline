<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="textbold">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#21262F</item>
    </style>

    <style name="text_sub_titulo">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#9FA3A8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:letterSpacing">.02</item>
    </style>
    <style name="ProgressA" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_a</item>
    </style>

    <style name="ProgressB" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_b</item>
    </style>
    <style name="ProgressCerto" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progresscorreto</item>
    </style>
    <style name="Edit_text_Padrap">

        <item name="android:background">@drawable/edit_text_padrao</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#8AAAC6</item>

    </style>

    <style name="Button">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="backgroundTint">@color/Azul_inicial</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="DialoAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_pra_cima</item>
        <item name="android:windowExitAnimation">@anim/slide_pra_baixo</item>

    </style>
    <style name="DialoAnimationEsquerParaDireita">
        <item name="android:windowEnterAnimation">@anim/esquerta_para_direita</item>
        <item name="android:windowExitAnimation">@anim/direita_para_esquerda</item>

    </style>
    <style name="CustomBottomNavigationCimapraBaixo">
        <item name="android:windowEnterAnimation">@anim/slide_pra_baixo</item>
        <item name="android:windowExitAnimation">@anim/slide_pra_cima</item>
    </style>

    <style name="text_comum">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">#717377</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="CustomBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/Azul_inicial</item>
        <item name="android:height">56dp</item>
    </style>

    <style name="editinputbusca">
        <item name="android:background">@drawable/bordas_edit</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/cornaoselecionadatextsub</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/azul_seleciona</item>
    </style>
    <style name="TextCnpj">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/corazultext</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextrazaoSocial">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/corazultext</item>
        <item name="android:fontFamily">@font/inter</item>

    </style>
    <style name="textoCalendario" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="CustomCalendarMonth" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">#34ABC3</item>
        <item name="colorPrimary">#A9F1FF</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>