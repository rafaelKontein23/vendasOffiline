<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nomeProdtud"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter"

        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgproduto"
        app:layout_constraintTop_toBottomOf="@+id/codProduto" />

    <TextView
        android:id="@+id/codProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="10dp"
        android:textColor="@color/Azul_inicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nomeProdtud"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/barra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="10dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/nomeProdtud"
        app:layout_constraintTop_toBottomOf="@+id/nomeProdtud" />

    <TextView
        android:id="@+id/valoruni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:textFontWeight="800"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/nomeProdtud"
        app:layout_constraintTop_toBottomOf="@+id/barra" />

    <ImageView
        android:id="@+id/imgproduto"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padrao" />

    <TextView
        android:id="@+id/unidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="uni,"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/valoruni"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view19"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/corlinhaorigin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgproduto" />
</androidx.constraintlayout.widget.ConstraintLayout>