<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    tools:context=".Views.Fragments.FragmentAlerta">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundalerta"
        android:layout_width="match_parent"
        android:background ="@drawable/bordas_carga"
        android:backgroundTint="#FDF6D2"
        android:elevation="8dp"
        android:outlineAmbientShadowColor="#795E00"
        android:outlineSpotShadowColor="#FFDE05"
        android:layout_margin="16dp"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tituloalerta"
            style="@style/textbold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="#B89A00"
            android:text="O desconto irá passar por aprovação"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconalert"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconalert"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/atencao"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>